@article{Anderson2021,
    author = {Anderson, Joyce H. and Maithripala, Sanjeeva and Holtz, Mark W.},
    title = {Direct measurement of thermal conductivity of gold nanowires and nanoribbons at ambient room temperature and 100 °C},
    journal = {Journal of Applied Physics},
